import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int a,b,sum=0;
        a = in.nextInt();
        for (int i=0;i<a;i++) {
            b = in.nextInt();
            sum+=b;
        }
        if(sum<=a/2){
            System.out.println(sum);
        }
        else
            System.out.println(a-sum);
    }
}
