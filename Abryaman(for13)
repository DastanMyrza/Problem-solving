import java.util.Scanner;
public class OKK {
    public static void main(String[] args) {
        double a,b,sum=0;
        Scanner in =new Scanner(System.in);
        a = in.nextInt();

        for (double i = 1; i <= a; i++) {
                sum+=Math.pow(-1,(i+1))*(1.0+i/10);
            
            }
        System.out.println(sum);
        }
    }
